  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0+</project_license>

  <name>Icon Browser</name>
  <summary>Browse and find system icons</summary>
  <description>
    <p>Browse system icons by category or search by icon name. See icons at different sizes and get a quick code snippet to use in your apps.</p>
  </description>

  <screenshots>
    <screenshot type="default">
      <caption>Browse system icons</caption>
      <image width="1034" height="710">https://raw.githubusercontent.com/elementary/iconbrowser/8.0.0/data/screenshot.png</image>
    </screenshot>
    <screenshot>
      <caption>Search by description</caption>
      <image width="1034" height="710">https://raw.githubusercontent.com/elementary/iconbrowser/8.0.0/data/screenshot2.png</image>
    </screenshot>
  </screenshots>

  <content_rating type="oars-1.1" />

  <provides>
    <binary>io.elementary.iconbrowser</binary>
  </provides>

  <url type="homepage">https://elementary.io/</url>
  <url type="bugtracker">https://github.com/elementary/iconbrowser/issues</url>
  <url type="donation">https://elementary.io/get-involved#funding</url>
  <url type="help">https://github.com/elementary/iconbrowser/discussions</url>
  <url type="translate">https://l10n.elementary.io/projects/iconbrowser</url>

  <developer id="org.elementaryos">
